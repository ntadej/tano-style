{
  "name": "@ntadej/style",
  "version": "0.4.0",
  "description": "Common infrastructure for tano.si webpages",
  "license": "MIT",
  "author": "Tadej Novak <tadej@tano.si>",
  "homepage": "https://github.com/ntadej/tano-style#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ntadej/tano-style.git"
  },
  "scripts": {
    "lint-eslint": "next lint",
    "lint-eslint-fix": "next lint --fix --max-warnings=0",
    "lint-typescript": "tsc --noEmit --declaration",
    "prettier-check": "prettier --check . --log-level warn",
    "prettier-fix": "prettier --write .",
    "lint-fix": "run-s prettier-fix lint-eslint-fix",
    "lint": "run-p lint-typescript prettier-check lint-eslint",
    "dev": "next dev --turbopack",
    "build": "next build"
  },
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "@fontsource-variable/inter": "^5",
    "@headlessui/react": "^2",
    "@heroicons/react": "^2",
    "@icons-pack/react-simple-icons": "^10",
    "next": "~15.1.2",
    "next-themes": "^0.4",
    "react": "^19",
    "react-dom": "^19"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5",
    "@types/node": "^22",
    "@types/react": "^19",
    "autoprefixer": "^10",
    "eslint": "^9",
    "eslint-config-next": "~15.1.2",
    "npm-run-all": "~4.1",
    "postcss": "^8",
    "pre-commit": "^1",
    "prettier": "3.4.2",
    "prettier-plugin-organize-imports": "^4",
    "prettier-plugin-tailwindcss": "~0.6",
    "tailwindcss": "~3.4",
    "typescript": "^5"
  }
}
