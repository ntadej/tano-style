{
  "name": "@ntadej/style",
  "version": "0.6.0",
  "description": "Common infrastructure for tano.si webpages",
  "license": "MIT",
  "author": "Tadej Novak <tadej@tano.si>",
  "homepage": "https://github.com/ntadej/tano-style#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ntadej/tano-style.git"
  },
  "scripts": {
    "prepare": "husky",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check . --log-level warn",
    "lint:ts": "tsc --noEmit --declaration",
    "dev": "next dev --turbopack",
    "build": "next build"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.9",
    "clsx": "^2.1.1",
    "next": "~16.1.6",
    "next-themes": "^0.4.6",
    "react": "~19.2.4",
    "react-dom": "~19.2.4",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^22.19.9",
    "@types/react": "~19.2.13",
    "autoprefixer": "^10.4.24",
    "eslint": "^9.39.2",
    "eslint-config-next": "~16.1.6",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "prettier": "3.8.1",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-tailwindcss": "~0.7.2",
    "tailwindcss": "~4.2.0",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{js,cjs,mjs,ts,tsx}": [
      "prettier --write",
      "eslint --fix --max-warnings=0 --no-warn-ignored"
    ],
    "*.{cjs,css,json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
