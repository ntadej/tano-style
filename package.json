{
  "name": "@ntadej/style",
  "version": "0.3.0",
  "description": "Common infrastructure for tano.si webpages",
  "license": "MIT",
  "author": "Tadej Novak <tadej@tano.si>",
  "homepage": "https://github.com/ntadej/tano-style#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ntadej/tano-style.git"
  },
  "scripts": {
    "lint-eslint": "eslint . --ext js,jsx,ts,tsx --max-warnings=0",
    "lint-eslint-fix": "eslint . --ext js,jsx,ts,tsx --fix --max-warnings=0",
    "lint-sass": "stylelint \"**/*.sass\"",
    "lint-typescript": "tsc --noEmit --declaration",
    "prettier-check": "prettier --check . --loglevel warn",
    "prettier-fix": "prettier --write .",
    "lint-fix": "run-s prettier-fix lint-eslint-fix",
    "lint": "run-p lint-typescript prettier-check lint-eslint lint-sass",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "export": "next export"
  },
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "bulma": "~0.9.3",
    "next": "~11.1.0",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "sass": "^1.42.0"
  },
  "devDependencies": {
    "@types/node": "^14.14.37",
    "@types/react": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "eslint": "^7.23.0",
    "npm-run-all": "^4.1.5",
    "pre-commit": "^1.2.2",
    "prettier": "2.4.1",
    "stylelint": "^13.12.0",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "stylelint-scss": "^3.19.0",
    "typescript": "^4.2.3"
  }
}
